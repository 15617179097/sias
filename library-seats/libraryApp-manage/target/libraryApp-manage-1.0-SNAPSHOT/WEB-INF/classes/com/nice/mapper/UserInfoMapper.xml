  insert into classroom (classroom_name,classroom_number,floor,state) values (#{classroomName},#{classroomNumber},#{floor},0)
  </insert>
  <insert id="insertSeats" parameterType="com.nice.pojo.Seats">
  insert into seats (classroom_id,seat_munber,state) values (#{classroomId},#{seatMunber},0)
  </insert>-->
</mapper>